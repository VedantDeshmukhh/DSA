#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

// Function to create a new node
Node* createNode(int data) {
    Node* newNode = new Node();
    newNode->data = data;
    newNode->next = nullptr;
    return newNode;
}

// ----- Insertion at End -----
void insertAtEnd(Node*& head, int data) {
    Node* newNode = createNode(data);
    if (head == nullptr) {
        head = newNode; // If list is empty, new node becomes head
        return;
    }
    Node* temp = head;
    while (temp->next != nullptr)
        temp = temp->next;
    temp->next = newNode; // Attach new node at the end
}

// ----- Insertion at Beginning -----
void insertAtBeginning(Node*& head, int data) {
    Node* newNode = createNode(data);
    newNode->next = head; // New node points to current head
    head = newNode;       // Head is updated to new node
}

// ----- Deletion -----
void deleteNode(Node*& head, int key) {
    if (head == nullptr) {
        cout << "List is empty!\n";
        return;
    }
    Node* temp = head;

    if (temp->data == key) {
        head = temp->next; // Head node is deleted
        delete temp;
        cout << "Node deleted successfully.\n";
        return;
    }

    Node* prev = nullptr;
    while (temp != nullptr && temp->data != key) {
        prev = temp;
        temp = temp->next;
    }

    if (temp == nullptr) {
        cout << "Node not found!\n";
        return;
    }

    prev->next = temp->next; // Bypass the node to delete
    delete temp;
    cout << "Node deleted successfully.\n";
}

// ----- Traversal -----
void traverseList(Node* head) {
    if (head == nullptr) {
        cout << "List is empty!\n";
        return;
    }
    cout << "Linked List: ";
    Node* temp = head;
    while (temp != nullptr) {
        cout << temp->data << " -> ";
        temp = temp->next;
    }
    cout << "NULL\n";
}

int main() {
    Node* head = nullptr;
    int choice, data, key;

    while (true) {
        cout << "\n--- Singly Linked List Operations ---\n";
        cout << "1. Create Node (Insert at End)\n";
        cout << "2. Insert at Beginning\n";
        cout << "3. Delete a Node\n";
        cout << "4. Traverse (Display List)\n";
        cout << "5. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Enter data to insert at end: ";
                cin >> data;
                insertAtEnd(head, data); // Insertion
                break;
            case 2:
                cout << "Enter data to insert at beginning: ";
                cin >> data;
                insertAtBeginning(head, data); // Insertion
                break;
            case 3:
                cout << "Enter value to delete: ";
                cin >> key;
                deleteNode(head, key); // Deletion
                break;
            case 4:
                traverseList(head); // Traversal
                break;
            case 5:
                cout << "Exiting program...\n";
                return 0;
            default:
                cout << "Invalid choice! Please try again.\n";
        }
    }
}
