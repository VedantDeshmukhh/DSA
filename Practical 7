#include <iostream>
using namespace std;

// ----- Insertion Sort -----
// Sorts array in ascending order
void insertionSort(int arr[], int n) {
    for (int i = 1; i < n; i++) {
        int key = arr[i];       // Element to be placed
        int j = i - 1;
        // Move elements greater than key one position ahead
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;       // Place key at correct position
    }
}

// ----- Merge Function for Merge Sort -----
// Merges two sorted subarrays: arr[left..mid] and arr[mid+1..right]
void merge(int arr[], int left, int mid, int right) {
    int n1 = mid - left + 1;   // Size of left subarray
    int n2 = right - mid;      // Size of right subarray
    int L[n1], R[n2];
    
    // Copy data to temporary arrays
    for (int i = 0; i < n1; i++)
        L[i] = arr[left + i];
    for (int j = 0; j < n2; j++)
        R[j] = arr[mid + 1 + j];

    int i = 0, j = 0, k = left;
    // Merge the temp arrays back into arr
    while (i < n1 && j < n2) {
        if (L[i] <= R[j])
            arr[k++] = L[i++];
        else
            arr[k++] = R[j++];
    }
    // Copy remaining elements of L[], if any
    while (i < n1)
        arr[k++] = L[i++];
    // Copy remaining elements of R[], if any
    while (j < n2)
        arr[k++] = R[j++];
}

// ----- Merge Sort (Recursive) -----
void mergeSort(int arr[], int left, int right) {
    if (left < right) {
        int mid = (left + right) / 2;
        mergeSort(arr, left, mid);       // Sort first half
        mergeSort(arr, mid + 1, right);  // Sort second half
        merge(arr, left, mid, right);    // Merge sorted halves
    }
}

// ----- Heapify Function for Heap Sort -----
// Maintains max-heap property for subtree rooted at index i
void heapify(int arr[], int n, int i) {
    int largest = i;          // Initialize largest as root
    int left = 2 * i + 1;    // Left child
    int right = 2 * i + 2;   // Right child

    // If left child is larger than root
    if (left < n && arr[left] > arr[largest])
        largest = left;

    // If right child is larger than current largest
    if (right < n && arr[right] > arr[largest])
        largest = right;

    // If largest is not root, swap and continue heapifying
    if (largest != i) {
        swap(arr[i], arr[largest]);
        heapify(arr, n, largest);
    }
}

// ----- Heap Sort -----
void heapSort(int arr[], int n) {
    // Build max heap
    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(arr, n, i);

    // One by one extract elements
    for (int i = n - 1; i > 0; i--) {
        swap(arr[0], arr[i]);   // Move current root to end
        heapify(arr, i, 0);     // Call max heapify on reduced heap
    }
}

// ----- Display Array -----
void display(int arr[], int n) {
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;
}

// ----- Main Function -----
int main() {
    int n, choice;

    cout << "Enter number of elements: ";
    cin >> n;
    int arr[n];

    cout << "Enter " << n << " elements:\n";
    for (int i = 0; i < n; i++)
        cin >> arr[i];

    while (true) {
        cout << " SORTING MENU\n";
        cout << "1. Insertion Sort\n";
        cout << "2. Merge Sort\n";
        cout << "3. Heap Sort\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        if (choice == 4) {
            cout << "Exiting program...\n";
            break;
        }

        // Copy original array to preserve unsorted data
        int temp[n];
        for (int i = 0; i < n; i++)
            temp[i] = arr[i];

        switch (choice) {
            case 1:
                insertionSort(temp, n);
                cout << "Array after Insertion Sort: ";
                display(temp, n);
                break;
            case 2:
                mergeSort(temp, 0, n - 1);
                cout << "Array after Merge Sort: ";
                display(temp, n);
                break;
            case 3:
                heapSort(temp, n);
                cout << "Array after Heap Sort: ";
                display(temp, n);
                break;
            default:
                cout << "Invalid choice! Try again.\n";
        }
    }
    return 0;
}
