#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

// ----- Create Node -----
Node* createNode(int data) {
    Node* newNode = new Node();
    newNode->data = data;
    newNode->next = nullptr;
    return newNode;
}

// ----- Insertion at End -----
void insertAtEnd(Node*& head, int data) {
    Node* newNode = createNode(data);
    if (head == nullptr) {
        head = newNode;
        newNode->next = head;
        return;
    }
    Node* temp = head;
    while (temp->next != head)
        temp = temp->next;
    temp->next = newNode;
    newNode->next = head;
}

// ----- Insertion at Beginning -----
void insertAtBeginning(Node*& head, int data) {
    Node* newNode = createNode(data);
    if (head == nullptr) {
        head = newNode;
        newNode->next = head;
        return;
    }
    Node* temp = head;
    while (temp->next != head)
        temp = temp->next;
    newNode->next = head;
    temp->next = newNode;
    head = newNode;
}

// ----- Deletion -----
void deleteNode(Node*& head, int key) {
    if (head == nullptr) {
        cout << "List is empty!\n";
        return;
    }

    Node *curr = head, *prev = nullptr;

    if (curr->data == key) {
        if (curr->next == head) {
            delete curr;
            head = nullptr;
            cout << "Node deleted successfully.\n";
            return;
        }
        Node* temp = head;
        while (temp->next != head)
            temp = temp->next;
        temp->next = head->next;
        head = head->next;
        delete curr;
        cout << "Node deleted successfully.\n";
        return;
    }

    prev = head;
    curr = head->next;
    while (curr != head && curr->data != key) {
        prev = curr;
        curr = curr->next;
    }
    if (curr == head) {
        cout << "Node not found!\n";
        return;
    }
    prev->next = curr->next;
    delete curr;
    cout << "Node deleted successfully.\n";
}

// ----- Traversal -----
void traverseList(Node* head) {
    if (head == nullptr) {
        cout << "List is empty!\n";
        return;
    }
    Node* temp = head;
    cout << "Circular Linked List: ";
    do {
        cout << temp->data << " -> ";
        temp = temp->next;
    } while (temp != head);
    cout << "(back to head)\n";
}

// ----- Main Function -----
int main() {
    Node* head = nullptr;
    int choice, data, key;

    while (true) {
        cout << "\n--- Circular Linked List Operations ---\n";
        cout << "1. Insert at End\n";
        cout << "2. Insert at Beginning\n";
        cout << "3. Delete a Node\n";
        cout << "4. Traverse\n";
        cout << "5. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cin >> data;
                insertAtEnd(head, data);
                break;
            case 2:
                cin >> data;
                insertAtBeginning(head, data);
                break;
            case 3:
                cin >> key;
                deleteNode(head, key);
                break;
            case 4:
                traverseList(head);
                break;
            case 5:
                return 0;
            default:
                cout << "Invalid choice!\n";
        }
    }
}
